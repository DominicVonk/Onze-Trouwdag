{% extends 'admin/layout.twig' %}
{% block content %}

	<div class="container pt-4 pb-4">

		<form action="/api/invitees/{{method}}/{{code.id}}" enctype="multipart/form-data" method="POST">
			<div class="row mb-4">
				<div class="col">
					<h2>
						{% if method == 'create' %}Nieuwe gast toevoegen{% else %}Gast bewerken
						{% endif %}
					</h2>
				</div>
				<div class="col-auto mr-auto">
					<button class="btn btn-primary" type="submit">Opslaan</button>
				</div>
			</div>

			<div class="row mb-4">
				<div class="col">
					<div class="form-group">
						<label>Naam</label>
						<input class="form-control" name="name" value="{{code.name}}">
					</div>
					<div class="form-group">
						<label>Interne Naam</label>
						<input class="form-control" name="internal_name" value="{{code.internal_name}}">
					</div>
					<div class="form-group">
						<label>Code</label>
						<input class="form-control" name="code" value="{{code.code}}">
					</div>
					<div class="form-group">
						<label>Volwassenen</label>
						<input class="form-control" name="adults" type="tel" value="{{code.adults}}">
					</div>
					<div class="form-group">
						<label>Kinderen</label>
						<input class="form-control" name="children" value="{{code.children}}">
					</div>
					<div class="form-group">
						<label>Aanwezigheid</label>
						<select class="form-control" name="status">
							<option value="0" {% if code.status == 0 or code.status == '' %} selected {% endif %}>Niet ingevuld</option>
							<option value="1" {% if code.status == 1 %} selected {% endif %}>Aanwezig</option>
							<option value="2" {% if code.status == 2 %} selected {% endif %}>Afwezig</option>
							<option value="3" {% if code.status == 3 %} selected {% endif %}>Verwijderen</option>
						</select>
					</div>
					<div class="form-group">
						<label>Type</label>
						<select class="form-control" name="type">
							<option value="0" {% if code.type == 0 or code.type == '' %} selected {% endif %}>Avondgast</option>
							<option value="1" {% if code.type == 1 %} selected {% endif %}>Daggast</option>
							<option value="2" {% if code.type == 2 %} selected {% endif %}>Middaggast</option>
						</select>
					</div>
				</div>
			</div>
		</form>
	</div>
{% endblock %}
