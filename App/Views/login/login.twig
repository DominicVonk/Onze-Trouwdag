{% extends 'admin/layout.twig' %}
{% block content %}
	<style>
		html,
		body,
		body > div {
			height: 100%;
		}

		body > div {
			display: -ms-flexbox;
			display: flex;
			-ms-flex-align: center;
			align-items: center;
			padding-top: 40px;
			padding-bottom: 40px;
			background-color: #f5f5f5;
		}

		.form-signin {
			width: 100%;
			max-width: 330px;
			padding: 15px;
			margin: auto;
		}
		.form-signin .checkbox {
			font-weight: 400;
		}
		.form-signin .form-control {
			position: relative;
			box-sizing: border-box;
			height: auto;
			padding: 10px;
			font-size: 16px;
		}
		.form-signin .form-control:focus {
			z-index: 2;
		}
		.form-signin input[type="email"] {
			margin-bottom: -1px;
			border-bottom-right-radius: 0;
			border-bottom-left-radius: 0;
		}
		.form-signin input[type="password"] {
			margin-bottom: 10px;
			border-top-left-radius: 0;
			border-top-right-radius: 0;
		}
	</style>
	<div class="text-center">
		<form action="/api/login" method="POST" class="form-signin">
			<h1 class="h3 mb-3 font-weight-normal">Onze Trouwdag</h1>
			<label for="inputEmail" class="sr-only">E-mailadres</label>
			<input type="email" name="username" id="inputEmail" class="form-control" placeholder="E-mailadres" required autofocus>
			<label for="inputPassword" class="sr-only">Wachtwoord</label>
			<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Wachtwoord" required>

			<button class="btn btn-lg btn-primary btn-block" type="submit">Inloggen</button>
			<p class="mt-5 mb-3 text-muted">&copy; 2020</p>
		</form>
	</div>
{% endblock %}
